    "version": "0.2.0",
    "configurations": [
        {
            "name": "Plone (instance fg)",
            "type": "python",
            "request": "launch",
            "program": "bin/instance",
            "args": ["fg"],
            "console": "integratedTerminal",
        },
        {
            "name": "Plone (wsgi)",
            "type": "python",
            "request": "launch",
            "module": "Zope2.Startup.serve",
            "args": [
                "-v",
                "${workspaceFolder}/parts/instance/etc/wsgi.ini"
            ],
            "justMyCode": false
        },
    ]
}
